<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ose='urn:import:ru.ksu.niimm.ose.ui.client'>
	<ui:style>
		.title-label {
			font-size: 2em;
			font-weight: bold;
			color: #777777;
			margin: 40px 0px 70px;
			text-align: center;
		}
		
		.main-panel {
			width: 100%;
		}
		
		.ose-label-panel {
			width: 100%;
		}
	</ui:style>
	<g:VerticalPanel styleName='{style.main-panel}'>

		<g:HorizontalPanel styleName='{style.ose-label-panel}'>
			<g:Label styleName='{style.title-label}'>Mocassin</g:Label>
		</g:HorizontalPanel>
		<ose:TopPanel ui:field='topPanel' />
		<ose:CenterPanel ui:field="centerPanel" />
	</g:VerticalPanel>

</ui:UiBinder>
