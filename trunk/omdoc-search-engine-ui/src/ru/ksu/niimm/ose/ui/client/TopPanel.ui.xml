<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ose='urn:import:ru.ksu.niimm.ose.ui.client'>
	<ui:style>
		.main-panel {
			padding-left: 30px;
		}
		
		.fake-label {
			padding-left: 10px;
			padding-right: 10px;
		}
		
		.find-label {
			font-size: large;
		}
	</ui:style>
	<g:VerticalPanel styleName='{style.main-panel}'>
		<g:Label styleName='{style.find-label}'>Найти</g:Label>
		<ose:QueryTree ui:field="tree"/>
		<g:HorizontalPanel>
			<g:Button ui:field="sendButton">Поиск</g:Button>
			<g:Label styleName='{style.fake-label}' />
			<g:Button ui:field="clearButton">Очистить</g:Button>
		</g:HorizontalPanel>

	</g:VerticalPanel>

</ui:UiBinder>
