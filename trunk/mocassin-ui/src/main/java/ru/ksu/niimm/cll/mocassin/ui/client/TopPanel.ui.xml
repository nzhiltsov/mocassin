<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ose='urn:import:ru.ksu.niimm.cll.mocassin.ui.client'>
	<ui:style>
		.main-panel {
			padding-left: 30px;
		}
		
		.fake-label {
			padding-left: 10px;
			padding-right: 10px;
		}
		
		.find-label {
			font-size: large;
		}
		
		.button-panel {
			padding-top: 10px;
		}
	</ui:style>
	<g:VerticalPanel styleName='{style.main-panel}'>
		<g:HorizontalPanel>
			<g:Label styleName='{style.find-label}' ui:field="findLabel" />
			<ose:QueryTree ui:field="tree" />
		</g:HorizontalPanel>
		<g:HorizontalPanel styleName='{style.button-panel}'>
			<g:Button ui:field="sendButton" />
			<g:Label styleName='{style.fake-label}' />
			<g:Button ui:field="clearButton" />
			<g:Label styleName='{style.fake-label}' />
			<ose:InferenceCheckbox ui:field="inferenceCheckbox"/>
		</g:HorizontalPanel>

	</g:VerticalPanel>

</ui:UiBinder>
