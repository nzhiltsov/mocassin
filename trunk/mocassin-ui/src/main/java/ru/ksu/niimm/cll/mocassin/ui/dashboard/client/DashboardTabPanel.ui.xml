<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.successMessage {
			background-color: yellow;
		}
		
		.errorMessage {
			background-color: red;
		}
		
		.arxivKeyLabel {
			font-size: small;
			font: bold;
		}
		
		.dashboardTabPanel {
			margin: 10px;
		}
	</ui:style>
	<g:TabLayoutPanel addStyleNames="{style.dashboardTabPanel}"
		ui:field="tabPanel" barUnit="PX" barHeight="60" width="400px">
		<g:tab>
			<g:header>
				Upload
            </g:header>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label>Enter arXiv key:</g:Label>
					<g:TextBox ui:field="uploadKeyInput" />
					<g:Button ui:field="uploadButton">Upload</g:Button>
				</g:HorizontalPanel>
				<g:Label ui:field="successMessage" addStyleNames="{style.successMessage}">The paper
					has been uploaded successfully!</g:Label>
				<g:Label ui:field="errorMessage" addStyleNames="{style.errorMessage}">Upload has
					failed.</g:Label>
			</g:VerticalPanel>
		</g:tab>
		<g:tab>
			<g:header>
				Index
            </g:header>
			<g:FlexTable ui:field="documentTable"/>
		</g:tab>
		<g:tab>
			<g:header>
				Collection Graph
            </g:header>
			<g:HTML>Stub</g:HTML>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder>