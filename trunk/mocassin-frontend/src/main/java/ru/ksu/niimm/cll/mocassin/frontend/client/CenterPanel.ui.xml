<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ose='urn:import:ru.ksu.niimm.cll.mocassin.frontend.client'
	xmlns:com='urn:import:ru.ksu.niimm.cll.mocassin.frontend.common.client'>
	<ui:style>
		.main-panel {
			width: 100%;
			height: 450px;
			padding-top: 10px;
		}
		
		.results-panel {
			width: 50%;
		}
	</ui:style>
	<g:VerticalPanel styleName='{style.main-panel}'>
		<ose:SearchResultsCountPanel ui:field="searchResultsCountPanel" />
		<g:VerticalPanel ui:field="resultsPanel" styleName='{style.results-panel}' />
		<com:PaginationPanel ui:field="paginationPanel" />
	</g:VerticalPanel>

</ui:UiBinder>
