<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ose='urn:import:ru.ksu.niimm.cll.mocassin.ui.client'>
	<ui:with type="ru.ksu.niimm.cll.mocassin.ui.client.Resources"
		field="res" />
	<ui:style>
		.main-panel {
			table-layout: auto;
			width: 100%;
			height: 100%;
			background-image: url(math_background.gif);
			background-repeat: repeat;
		}
		
		.ose-label-panel {
			width: 100%;
		}
	</ui:style>
	<g:ScrollPanel>
		<g:VerticalPanel styleName='{style.main-panel}'>
			<g:HorizontalPanel horizontalAlignment='ALIGN_CENTER'
				width='100%'>
				<g:Image resource='{res.logo}' />
			</g:HorizontalPanel>
			<ose:TopPanel ui:field='topPanel' />
			<ose:CenterPanel ui:field="centerPanel" />
			<ose:CopyrightWidget />
		</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder>
