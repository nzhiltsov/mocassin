<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ose='urn:import:ru.ksu.niimm.cll.mocassin.ui.client'>
	<ui:style>
		.main-panel {
			padding-top: 20px;
			padding-left: 30px;
			width: 100%;
		}
		
		.title-label {
			font-size: medium;
			cursor: pointer;
		}
		
		.author-label {
			color: green;
		}
	</ui:style>
	<g:VerticalPanel styleName='{style.main-panel}'>
		<g:HorizontalPanel ui:field="titlePanel">
			<g:Hyperlink ui:field="titleLink" styleName='{style.title-label}' />
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label ui:field="relevantContextLabel" />
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Label ui:field="authorLabel" styleName='{style.author-label}' />
			<ose:DocumentFormat ui:field="rdfDocumentFormat" />
		<ose:DocumentFormat ui:field="viewerDocumentFormat" /> 
		<!--  	<ose:DocumentFormat ui:field="pdfDocumentFormat" /> -->
		</g:HorizontalPanel>
	</g:VerticalPanel>

</ui:UiBinder>

